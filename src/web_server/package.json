{
  "name": "ros2-web-server",
  "version": "1.0.0",
  "description": "ROS2 Web Server using rclnodejs",
  "main": "server.js",
  "scripts": {
    "setup": "bash -c 'npm install --force && source ../../install/setup.bash && npx generate-ros-messages'",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "server": "bash -c 'source ../../install/setup.bash && node server.js'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "rclnodejs": "^0.21.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
